# Application Configuration
APP_NAME="Personal Portfolio Tracker"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=America/New_York

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=portfolio_tracker
DB_USERNAME=portfolio_user
DB_PASSWORD=secure_password_change_me
DB_ROOT_PASSWORD=root_password_change_me

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE=false

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=portfolio_

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_PREFIX=portfolio_queue_

# Mail Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@portfolio-tracker.local
MAIL_FROM_NAME="${APP_NAME}"

# Security Configuration
APP_KEY=base64:generate_this_key_in_production
JWT_SECRET=generate_this_secret_in_production
BCRYPT_ROUNDS=12

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60

# Data Fetching Configuration
DEFAULT_FETCH_INTERVAL=900
MARKET_HOURS_START=09:30
MARKET_HOURS_END=16:00
MARKET_TIMEZONE=America/New_York

# External API Configuration (managed via admin interface)
# These are just for reference - actual keys stored in database
YAHOO_FINANCE_ENABLED=true
POLYGON_IO_ENABLED=false
ALPHA_VANTAGE_ENABLED=false

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null

# Docker Configuration
COMPOSE_PROJECT_NAME=portfolio_tracker
NGINX_PORT=80
NGINX_SSL_PORT=443

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
